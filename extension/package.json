{
  "name": "3things-extension",
  "version": "1.0.0",
  "description": "3Things Chrome Extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "echo 'No platform specified, building for Chrome.' && npm run build:chrome",
    "build:chrome": "node scripts/prebuild-chrome.mjs && vite build && node scripts/copy-manifest.mjs",
    "build:firefox": "node scripts/prebuild-firefox.mjs && vite build && node scripts/copy-manifest.mjs",
    "preview": "vite preview",
    "package": "node scripts/package.mjs",
    "package:chrome": "node scripts/package-chrome.mjs",
    "package:firefox": "node scripts/package-firefox.mjs"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "motion": "^12.23.24",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.7.0",
    "archiver": "^7.0.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.8.0",
    "vite": "^6.3.5"
  }
}
